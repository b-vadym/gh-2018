{% extends 'base.html.twig' %}

{% block body %}
    {% for post in posts %}
        <div class="col">
            <h3>{{ post.title }}</h3>
            <div class="post-content">{{ post.body }}</div>
            {% if is_granted('edit', post) %}
                <a href="{{ path('post_edit', {'id': post.id}) }}">edit</a>
            {% endif %}
        </div>
    {% else %}
        <p>--------------------</p>
    {% endfor %}
{% endblock %}